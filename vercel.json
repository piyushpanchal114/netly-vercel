{
  "version": 2,
  "builds": [
    {
      "src": "netly/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLamdaSize": "15mb",
        "runtime": "python3.10.4"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir" : "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/wsgi.py"
    }
  ]
}